    <main class="page active" id="page-contact">
<!-- CONTACT PAGE -->
    
        <section class="contact-section">
                <div class="contact-header">
                    <h2>Get in Touch</h2>
                    <p>Whether you're a potential partner, investor, or curious about what we're building — we'd love to hear from you.</p>
                </div>
        
                <div class="contact-layout">
                    <!-- Left Column: Contact Options -->
                    <div class="contact-options">
                        <div class="contact-card" data-type="platform" onclick="selectContactType(this, 'platform')">
                            <h3>For Platforms</h3>
                            <p>Interested in integrating the Harmonia Engine into your platform? Let's discuss how compatibility science can improve your matching.</p>
                            <span class="card-indicator">Selected →</span>
                        </div>
        
                        <div class="contact-card" data-type="individual" onclick="selectContactType(this, 'individual')">
                            <h3>For Testing</h3>
                            <p>Want to be part of our London beta? Join the testing pool and help us refine compatibility matching.</p>
                            <span class="card-indicator">Selected →</span>
                        </div>
        
                        <div class="contact-card" data-type="other" onclick="selectContactType(this, 'other')">
                            <h3>General Inquiries</h3>
                            <p>Press, research collaborations, or just want to say hello? We're always happy to connect.</p>
                            <span class="card-indicator">Selected →</span>
                        </div>
                    </div>
        
                    <!-- Right Column: Regal Form -->
                    <div class="regal-form-container">
                        <form class="regal-form" id="contactForm">
                            <h3>Send a Message</h3>
                            
                            <div class="form-row">
                                <div class="input-group">
                                    <label for="contact-name">Your Name</label>
                                    <input type="text" id="contact-name" name="name" required placeholder="Jane Smith">
                                </div>
                                <div class="input-group">
                                    <label for="contact-email">Email</label>
                                    <input type="email" id="contact-email" name="email" required placeholder="jane@example.com">
                                </div>
                            </div>
        
                            <div class="input-group">
                                <label for="contact-type">I am a...</label>
                                <select id="contact-type" name="type" required>
                                    <option value="">Select...</option>
                                    <option value="platform">Dating Platform</option>
                                    <option value="investor">Investor</option>
                                    <option value="researcher">Researcher</option>
                                    <option value="press">Press</option>
                                    <option value="individual">Individual User</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
        
                            <div class="input-group">
                                <label for="contact-message">Message</label>
                                <textarea id="contact-message" name="message" required placeholder="Tell us what you're thinking..."></textarea>
                            </div>
        
                            <button type="submit" class="submit-btn" id="submitBtn">
                                <span class="btn-text">Send Message</span>
                                <span class="arrow">→</span>
                            </button>
        
                            <div class="form-success" id="formSuccess">
                                Message received. We will be in touch shortly.
                            </div>
                        </form>
                    </div>
                </div>
            </section>

